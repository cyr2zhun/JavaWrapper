<service>
  <id>MyJavaService</id>
  <name>My Java Services</name>
  <description>This service runs my Java application</description>
  <executable>java</executable>
  <arguments>-cp "C:\Users\xxx\workspace\JavaWrapper\*;C:\Users\xxx\workspace\JavaWrapper\target\javawrapper-1.0.jar" com.wrapper.MyDaemon</arguments>
  <logmode>rotate</logmode>
  
  <!-- Optional: Set Java home if needed 
  <env name="JAVA_HOME" value="C:\Program Files\Java\jdk-21\bin"/>
  -->
  <!-- Optional: Start mode -->
  <startmode>Automatic</startmode>
</service>